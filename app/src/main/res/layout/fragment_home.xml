<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BAF4DBD1"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/notes_card"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#6AE67E7E"
            app:layout_constraintLeft_toLeftOf="@id/c"
            app:layout_constraintTop_toTopOf="@id/c">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_2021"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon"

                />

            <TextView
                android:id="@+id/Text_1_2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Text_2_2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="Open notes"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/button_notes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="65dp"
                android:backgroundTint="#6AE67E7E"
                android:src="@drawable/ic_baseline_send_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_2020"
            android:layout_width="185dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#6AE67E7E"
            android:padding="30dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintLeft_toRightOf="@id/notes_card"
            app:layout_constraintTop_toTopOf="@id/notes_card">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/card_paper"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon"

                />

            <TextView
                android:id="@+id/Text_1_2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="Paper"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Text_2_2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="Open paper"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/paper_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="65dp"
                android:backgroundTint="#6AE67E7E"
                android:src="@drawable/ic_baseline_send_24" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>